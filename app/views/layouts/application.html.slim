              ul.dropdown
                li= link_to "1) Nitrous account", nitrous_path
                li.divider
                li= link_to "2) RailsPet Guide", railspetguide_path
                li.divider
                li= link_to "3) RailsPet FoodGuide", foodguide_path
            li.divider

    = render 'layouts/messages'

    .row
      .large-12.columns

        = yield

